{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Keep for Next.js
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Change to 'node' for Jest compatibility
    "resolveJsonModule": true,
    "isolatedModules": true, // Required by Next.js
    "jsx": "react-jsx", // Change to 'react-jsx' for better Jest support
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ], // Keep for Next.js
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ], // Add test files
  "exclude": [
    "node_modules"
  ]
}
